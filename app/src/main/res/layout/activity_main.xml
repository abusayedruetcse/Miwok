<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/defaultBackground">

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:background="@color/numbersColor"
                android:text="Numbers"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/textSize"
                android:textAlignment="viewStart"
                android:paddingLeft="@dimen/space"
                android:textAllCaps="false"
                android:id="@+id/numbersButton"
                android:onClick="numbersButtonClick" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:background="@color/familyColor"
                android:text="Family Members"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/textSize"
                android:textAlignment="viewStart"
                android:paddingLeft="@dimen/space"
                android:textAllCaps="false"
                android:id="@+id/familyButton"
                android:onClick="familyButtonClick"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:background="@color/colorsColor"
                android:text="Colors"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/textSize"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:paddingLeft="@dimen/space"
                android:id="@+id/colorsButton"
                android:onClick="colorsButtonClick"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:background="@color/phrasesColor"
                android:text="Phrases"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/textSize"
                android:paddingLeft="@dimen/space"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:id="@+id/phrasesButton"
                android:onClick="phrasesButtonClick"/>
        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>